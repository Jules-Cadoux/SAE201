<Window
    x:Class="SAE201.Windows.RechercherClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:SAE201.UserControls"
    Title="RechercherClient"
    Width="800"
    Height="450"
    Background="#F5F5F5"
    mc:Ignorable="d">

    <Grid>
        <Border
            Height="60"
            VerticalAlignment="Top"
            Background="#8B0000">
            <Grid>
                <StackPanel
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Foreground="White"
                        Text="🍷" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="NICOLAS" />
                    <TextBlock
                        Margin="10,0,0,8"
                        VerticalAlignment="Bottom"
                        FontSize="12"
                        Foreground="#FFD700"
                        Text="Caviste depuis 1822" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Margin="0,60,0,30">
            <TabControl>
                <TabItem Header="Les Clients">
                    <Grid Background="#FFFFFF">
                        <DataGrid
                            x:Name="dgClients"
                            Margin="71,42,213,18"
                            AlternatingRowBackground="#FFF8F8"
                            AutoGenerateColumns="False"
                            Background="White"
                            BorderBrush="#8B0000"
                            BorderThickness="2"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            HorizontalGridLinesBrush="#E0E0E0"
                            IsReadOnly="True"
                            ItemsSource="{Binding LesClients}"
                            RowBackground="White">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#8B0000" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Padding" Value="8,5" />
                                    <Setter Property="BorderBrush" Value="#660000" />
                                    <Setter Property="BorderThickness" Value="0,0,1,0" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NomClient}"
                                    Header="Nom" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding PrenomClient}"
                                    Header="Prénom" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding MailClient}"
                                    Header="Mail " />
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBox
                            x:Name="textMotClefClient"
                            Width="286"
                            Margin="183,10,0,0"
                            Padding="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="#8B0000"
                            BorderThickness="2"
                            FontSize="12"
                            TextChanged="textMotClefClient_TextChanged" />
                        <Button
                            x:Name="buttSupprimer"
                            Width="30"
                            Height="30"
                            Margin="676,110,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#8B0000"
                            BorderBrush="#660000"
                            BorderThickness="1"
                            Click="buttSupprimer_Click"
                            Content="&#xE74D;"
                            Cursor="Hand"
                            FontFamily="Segoe MDL2 Assets"
                            FontWeight="SemiBold"
                            Foreground="White"
                            ToolTip="Supprimer" />

                        <Button
                            x:Name="buttAjouter"
                            Width="30"
                            Height="30"
                            Margin="676,148,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#8B0000"
                            BorderBrush="#660000"
                            BorderThickness="1"
                            Click="buttAjouter_Click"
                            Content="&#xE710;"
                            Cursor="Hand"
                            FontFamily="Segoe MDL2 Assets"
                            FontWeight="SemiBold"
                            Foreground="White"
                            ToolTip="Ajouter" />
                        <Button
                            x:Name="buttEditer"
                            Width="30"
                            Height="30"
                            Margin="676,186,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#8B0000"
                            BorderBrush="#660000"
                            BorderThickness="1"
                            Click="buttEditer_Click"
                            Content="&#xE70F;"
                            Cursor="Hand"
                            FontFamily="Segoe MDL2 Assets"
                            FontWeight="SemiBold"
                            Foreground="White"
                            ToolTip="Editer" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <Border
            Height="30"
            VerticalAlignment="Bottom"
            Background="#8B0000">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontStyle="Italic"
                Foreground="White"
                Text="Nicolas - L'art de bien choisir son vin" />
        </Border>
    </Grid>
</Window>