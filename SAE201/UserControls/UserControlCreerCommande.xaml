<UserControl
    x:Class="SAE201.UserControls.UserControlCreerCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="965"
    d:DesignWidth="800"
    Background="#FFFFFF"
    mc:Ignorable="d">

    <StackPanel>
        <Border
            Height="60"
            VerticalAlignment="Top"
            Background="#8B0000">
            <Grid>
                <StackPanel
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Foreground="White"
                        Text="🍷" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="NICOLAS" />
                    <TextBlock
                        Margin="10,0,0,8"
                        VerticalAlignment="Bottom"
                        FontSize="12"
                        Foreground="#FFD700"
                        Text="Caviste depuis 1822" />
                    <Button
                        x:Name="buttDeconnexion"
                        Margin="1500,0,0,0"
                        HorizontalAlignment="Right"
                        Background="DarkRed"
                        BorderBrush="DarkRed"
                        Content="Déconnexion"
                        Foreground="White" Click="buttDeconnexion_Click" />
                </StackPanel>
            </Grid>
        </Border>
        <TabControl>
            <TabItem Header="Les commandes">
                <Grid Width="795" Height="960">

                    <DataGrid
                        x:Name="dgCommandes"
                        Width="680"
                        Height="295"
                        Margin="30,55,84,609"
                        AlternatingRowBackground="#FFF8F8"
                        AutoGenerateColumns="False"
                        Background="White"
                        BorderBrush="#8B0000"
                        BorderThickness="2"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        HorizontalGridLinesBrush="#E0E0E0"
                        IsReadOnly="True"
                        ItemsSource="{Binding LesDemandes}"
                        RowBackground="White">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#8B0000" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Padding" Value="8,5" />
                                <Setter Property="BorderBrush" Value="#660000" />
                                <Setter Property="BorderThickness" Value="0,0,1,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="2*"
                                Binding="{Binding NumVin.NomVin}"
                                Header="Vin" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding NumVin.NumFournisseur.NomFournisseur}"
                                Header="Fournisseur" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding NumEmploye.Nom}"
                                Header="Demandé par " />
                            <DataGridTextColumn
                                Width="1.5*"
                                Binding="{Binding DateDemande}"
                                Header="Date" />
                            <DataGridTextColumn
                                Width="0.5*"
                                Binding="{Binding QuantiteDemande}"
                                Header="Quantite " />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Accepter}"
                                Header="Choix ">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Accepter}" Value="En Attente">
                                                <Setter Property="Background" Value="Orange" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Padding" Value="5,2" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Accepter}" Value="Accepter">
                                                <Setter Property="Background" Value="Green" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Padding" Value="5,2" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Accepter}" Value="Refuser">
                                                <Setter Property="Background" Value="Red" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Padding" Value="5,2" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label
                        Margin="30,15,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Créer une commande"
                        FontSize="20"
                        FontWeight="Bold" />
                    <Button
                        x:Name="buttEditerDemande"
                        Width="30"
                        Height="30"
                        Margin="0,241,30,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#8B0000"
                        BorderBrush="#660000"
                        BorderThickness="1"
                        Click="buttEditerDemande_Click"
                        Content="&#xE70F;"
                        Cursor="Hand"
                        FontFamily="Segoe MDL2 Assets"
                        FontWeight="SemiBold"
                        Foreground="White"
                        ToolTip="Editer" />

                    <ScrollViewer x:Name="lesCommandesAPasser" Margin="20,377,20,131">
                        <StackPanel Cursor="">
                            <Label
                                Margin="10,10,0,10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Commandes"
                                FontSize="18"
                                FontWeight="Bold" />

                            <ListBox
                                x:Name="lbCommandesFournisseurs"
                                Height="397"
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding LesCommandesParFournisseur}"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,10,0,20"
                                            Padding="15"
                                            Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                            <StackPanel>
                                                <!--  En-tête avec nom du fournisseur  -->
                                                <TextBlock
                                                    Margin="0,0,0,15"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Foreground="#333"
                                                    Text="{Binding NomFournisseur}" />

                                                <!--  En-têtes des colonnes  -->
                                                <Grid Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="2*" />
                                                        <ColumnDefinition Width="1.5*" />
                                                        <ColumnDefinition Width="1.5*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#666"
                                                        Text="VIN" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#666"
                                                        Text="PRIX UNITAIRE" />
                                                    <TextBlock
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#666"
                                                        Text="QUANTITÉ" />
                                                    <TextBlock
                                                        Grid.Column="3"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#666"
                                                        Text="PRIX LIGNE" />
                                                </Grid>

                                                <!--  Séparateur  -->
                                                <Border
                                                    Height="1"
                                                    Margin="0,0,0,10"
                                                    Background="#E0E0E0" />

                                                <!--  Liste des vins  -->
                                                <ItemsControl ItemsSource="{Binding DemandesVins}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,5,0,5">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="3*" />
                                                                    <ColumnDefinition Width="2*" />
                                                                    <ColumnDefinition Width="1.5*" />
                                                                    <ColumnDefinition Width="1.5*" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock
                                                                    Grid.Column="0"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="13"
                                                                    FontWeight="SemiBold"
                                                                    Text="{Binding NumVin.NomVin}" />

                                                                <TextBlock
                                                                    Grid.Column="1"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="12"
                                                                    Text="{Binding NumVin.PrixVin, StringFormat={}{0:C2}, ConverterCulture='fr-FR'}" />

                                                                <TextBlock
                                                                    Grid.Column="2"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="12"
                                                                    Text="{Binding QuantiteDemande}" />

                                                                <TextBlock
                                                                    Grid.Column="3"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="12"
                                                                    FontWeight="SemiBold"
                                                                    Text="{Binding PrixLigne, StringFormat={}{0:C2}, ConverterCulture='fr-FR'}" />

                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!--  Pied avec total et bouton  -->
                                                <Grid Margin="0,15,0,0" Background="#F8F9FA">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        Text="{Binding PrixTotal, StringFormat='Total: {0:C2}', ConverterCulture='fr-FR'}" />

                                                    <Button
                                                        x:Name="buttValiderCommande"
                                                        Grid.Column="1"
                                                        Padding="15,8"
                                                        Background="#FF770000"
                                                        Click="buttValiderCommande_Click"
                                                        Content="✓ Valider la commande"
                                                        Cursor="Hand"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#FFFFFF" />
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Etat des commandes">
                <Grid>
                    <Label
                        Margin="10,6,584,279"
                        Content="Réception Commandes"
                        FontSize="18"
                        FontWeight="Bold" />
                    <DataGrid
                        x:Name="dgCommandes_Copy"
                        Height="269"
                        Margin="0,40,0,0"
                        AlternatingRowBackground="#FFF8F8"
                        AutoGenerateColumns="False"
                        Background="White"
                        BorderBrush="#8B0000"
                        BorderThickness="2"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        HorizontalGridLinesBrush="#E0E0E0"
                        IsReadOnly="True"
                        ItemsSource="{Binding LesCommandes}"
                        RowBackground="White">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#8B0000" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Padding" Value="8,5" />
                                <Setter Property="BorderBrush" Value="#660000" />
                                <Setter Property="BorderThickness" Value="0,0,1,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding NumCommande}"
                                Header="N° Commande" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding NomFournisseurPrincipal}"
                                Header="Fournisseur" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding DateCommande, StringFormat='dd/MM/yyyy'}"
                                Header="Date de Commande" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding PrixTotal}"
                                Header="Prix commande" />

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </TabItem>
        </TabControl>


    </StackPanel>
</UserControl>