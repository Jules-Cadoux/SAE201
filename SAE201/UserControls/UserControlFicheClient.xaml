<UserControl
    x:Class="SAE201.UserControls.UserControlFicheClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel x:Name="panelUCFormClient">
        <Label
            x:Name="labNom"
            Width="200"
            Content="Nom"
            FontSize="10" />
        <TextBox
            x:Name="textNom"
            Width="200"
            Text="{Binding Nom, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />

        <Label
            x:Name="labPrenom"
            Width="200"
            Content="Prénom"
            FontSize="10" />
        <TextBox
            x:Name="textPrenom"
            Width="200"
            Text="{Binding Maitre, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />

        <Label
            x:Name="labMail"
            Width="200"
            Content="Mail"
            FontSize="10" />
        <TextBox
            x:Name="textMail"
            Width="200"
            Text="{Binding Poids, ValidatesOnExceptions=True}"
            TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
