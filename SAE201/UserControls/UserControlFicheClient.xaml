<UserControl
    x:Class="SAE201.UserControls.UserControlFicheClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Background="#F9F9F9"
    mc:Ignorable="d">

    <Border
        Margin="10"
        Background="White"
        BorderBrush="#8B0000"
        BorderThickness="2"
        CornerRadius="5">
        <Grid>
            <Border
                Height="30"
                VerticalAlignment="Top"
                Background="#F8F8F8"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,8,0"
                        FontSize="16"
                        Text="🍷" />
                    <TextBlock
                        Height="18"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#8B0000"
                        Text="NICOLAS" />
                </StackPanel>
            </Border>

            <StackPanel x:Name="panelUCFormClient" Margin="0,30,0,0">
                <Label
                    x:Name="LabTitre"
                    Height="40"
                    Padding="10,5"
                    HorizontalAlignment="Center"
                    Background="White"
                    BorderBrush="#8B0000"
                    BorderThickness="0,0,0,2"
                    Content="Fiche client"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#8B0000"
                    IsEnabled="False" />
                <Label
                    x:Name="labNom"
                    Width="200"
                    Height="22"
                    Margin="0,5,0,0"
                    Content="Nom"
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="#8B0000" />
                <TextBox
                    x:Name="textNom"
                    Width="200"
                    Height="30"
                    Margin="0,-1,0,0"
                    Padding="8,5"
                    Background="White"
                    BorderBrush="#8B0000"
                    BorderThickness="2"
                    FontSize="12"
                    Text="{Binding NomClient, ValidatesOnExceptions=True}"
                    TextWrapping="Wrap" />
                <Label
                    x:Name="labPrenom"
                    Width="200"
                    Content="Prénom"
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="#8B0000" />
                <TextBox
                    x:Name="textPrenom"
                    Width="200"
                    Height="30"
                    Padding="8,5"
                    Background="White"
                    BorderBrush="#8B0000"
                    BorderThickness="2"
                    FontSize="12"
                    Text="{Binding PrenomClient, ValidatesOnExceptions=True}"
                    TextWrapping="Wrap" />
                <Label
                    x:Name="labMail"
                    Width="200"
                    Content="Mail"
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="#8B0000" />
                <TextBox
                    x:Name="textMail"
                    Width="200"
                    Height="30"
                    Padding="8,5"
                    Background="White"
                    BorderBrush="#8B0000"
                    BorderThickness="2"
                    FontSize="12"
                    Text="{Binding MailClient, ValidatesOnExceptions=True}"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="butValider"
                    Width="106"
                    Height="35"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Background="#8B0000"
                    BorderThickness="1"
                    Click="butValider_Click"
                    Content="Button"
                    Cursor="Hand"
                    FontWeight="SemiBold"
                    Foreground="White"
                    IsDefault="True" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>