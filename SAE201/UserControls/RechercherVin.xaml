<UserControl  x:Class="SAE201.UserControls.RechercherVin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SAE201.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="TabItem">
                <StackPanel Background="#FFE5E5E5">
                    <Grid>
                        <TextBox x:Name="textRechercheVin" Grid.Row="1" Height="40" Margin="0,0,0,0" Padding="10" FontSize="14" Text="" TextChanged="RefreshRecherche" GotFocus="textRechercheVin_GotFocus" />
                        <Label x:Name="labRechercheVin" Height="40" Content="Nom du vin" VerticalContentAlignment="Center" Width="80" HorizontalAlignment="Left"/>
                    </Grid>


                    <!--  Filtres  -->
                    <StackPanel
                    Grid.Row="2"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                        <ComboBox x:Name="comboTypeVin" Width="120" Height="30" Text="Type de vin" VerticalContentAlignment="Center" >
                            <ComboBoxItem>Blanc</ComboBoxItem>
                            <ComboBoxItem>Rose</ComboBoxItem>
                            <ComboBoxItem>Rouge</ComboBoxItem>
                        </ComboBox>
                        <ComboBox x:Name="comboAppellation" Width="120" Height="30" Text="Appellation" VerticalContentAlignment="Center" >
                            <ComboBoxItem>AOC</ComboBoxItem>
                            <ComboBoxItem>AOP</ComboBoxItem>
                            <ComboBoxItem>IGP</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Margin="5,0,5,0" VerticalAlignment="Center" Text="Année de production" />
                        <TextBox Width="80" Height="30" Text="" VerticalContentAlignment="Center" />
                        <TextBlock Margin="5,0,5,0" VerticalAlignment="Center" Text="Prix max (€)" />
                        <TextBox Width="80" Height="30" Text="" VerticalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel Grid.Row="3">
                        <TextBlock Margin="0,0,0,10" FontSize="16" FontWeight="Bold" Text="{Binding VinsView.Count, StringFormat='Résultats ({0})'}" />
                        <ListBox ItemsSource="{Binding Vins}" HorizontalAlignment="Stretch" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Background="White" CornerRadius="5" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1" Height="230" Width="250">
                                        <StackPanel>
                                            <Rectangle Height="100" Fill="#DDD" Margin="0,0,0,10"/>
                                            <TextBlock Margin="0,10,0,0" FontWeight="Bold" Text="{Binding NomVin}" TextWrapping="Wrap" />
                                            <TextBlock Foreground="Gray" Text="{Binding Description}" TextWrapping="Wrap" />
                                            <TextBlock FontWeight="Bold" Foreground="#5C6AC4" Text="{Binding PrixVin, StringFormat='{}{0:C}'}" />
                                            <Button Width="25" Height="25" Content="&#xE710;" FontFamily="Segoe MDL2 Assets" ToolTip="Add" HorizontalAlignment="Right" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="TabItem" Margin="-2,0,2,0" Height="22" VerticalAlignment="Bottom">
                <StackPanel >
                    <Label Content="Créer une demande" Width="730" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>
                    <DataGrid Height="235"  Width="734" Margin="0,30,0,0" SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Vin"  Width="450"/>
                            <DataGridTextColumn Header="Date"  Width="*"/>
                            <DataGridTextColumn Header="Quantité"  Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Valider la demande" Width="120" Margin="600,25,0,0" Height="25"/>
                </StackPanel>


            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
