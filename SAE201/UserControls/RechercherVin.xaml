<UserControl
    x:Class="SAE201.UserControls.RechercherVin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SAE201.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:SAE201.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    
    <StackPanel>
        <Border
            Height="60"
            VerticalAlignment="Top"
            Background="#8B0000">
            <Grid>
                <StackPanel
                    Margin="20,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Foreground="White"
                        Text="🍷" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="NICOLAS" />
                    <TextBlock
                        Margin="10,0,0,8"
                        VerticalAlignment="Bottom"
                        FontSize="12"
                        Foreground="#FFD700"
                        Text="Caviste depuis 1822" />
                </StackPanel>
            </Grid>
        </Border>
        <TabControl>
            <TabItem Header="Rechercher Vin">
                <Grid Margin="20">

                    <StackPanel Background="DarkRed">
                        <!--  Zone de recherche par nom  -->
                        <Grid>
                            <TextBox
                                x:Name="textRechercheVin"
                                Height="40"
                                Padding="10"
                                VerticalAlignment="Top"
                                BorderBrush="#8B0000"
                                BorderThickness="2"
                                FontSize="12"
                                GotFocus="textRechercheVin_GotFocus"
                                TextChanged="RefreshRecherche" />
                            <Label
                                x:Name="labRechercheVin"
                                Width="80"
                                Height="40"
                                HorizontalAlignment="Left"
                                VerticalContentAlignment="Center"
                                Content="Nom du vin" />
                        </Grid>

                        <!--  Zone de filtres  -->
                        <StackPanel Margin="0,10,0,10" Orientation="Horizontal">
                            <ComboBox
                                x:Name="comboTypeVin"
                                Width="120"
                                Height="30"
                                VerticalContentAlignment="Center"
                                Background="DarkRed"
                                SelectionChanged="ComboTypeVin_SelectionChanged"
                                Text="Type de vin">
                                <ComboBoxItem Content="Tous les types" IsSelected="True" />
                                <ComboBoxItem Content="Blanc" />
                                <ComboBoxItem Content="Rosé" />
                                <ComboBoxItem Content="Rouge" />
                            </ComboBox>

                            <ComboBox
                                x:Name="comboAppellation"
                                Width="135"
                                Height="30"
                                Margin="10,0,0,0"
                                VerticalContentAlignment="Center"
                                SelectionChanged="ComboAppellation_SelectionChanged"
                                Text="Appellation">
                                <ComboBoxItem Content="Toutes appellations" IsSelected="True" />
                                <ComboBoxItem Content="AOC" />
                                <ComboBoxItem Content="AOP" />
                                <ComboBoxItem Content="IGP" />
                            </ComboBox>

                            <TextBlock
                                Margin="10,0,5,0"
                                VerticalAlignment="Center"
                                Text="Année :" />
                            <TextBox
                                x:Name="textAnnee"
                                Width="60"
                                Height="30"
                                VerticalContentAlignment="Center"
                                TextChanged="TextAnnee_TextChanged" />

                            <TextBlock
                                Margin="10,0,5,0"
                                VerticalAlignment="Center"
                                Text="Prix (€):" />
                            <TextBox
                                x:Name="textPrix"
                                Width="80"
                                Height="30"
                                VerticalContentAlignment="Center"
                                TextChanged="TextPrix_TextChanged" />
                            <Button
                                x:Name="btnReinitialiser"
                                Width="140"
                                Height="30"
                                Margin="20,0,0,0"
                                Click="BtnReinitialiser_Click"
                                Content="Réinitialiser filtres" />
                        </StackPanel>


                        <!--  Zone d'affichage des résultats  -->
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="{Binding VinsView.Count, StringFormat='Résultats ({0})'}" Foreground="White" />
                            <ListBox
                                x:Name="listBoxVins"
                                Width="826"
                                Height="355"
                                Background="Transparent"
                                ItemsSource="{Binding VinsView}"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="240"
                                            Height="250"
                                            Margin="5"
                                            Padding="10"
                                            Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="5">
                                            <StackPanel>
                                                <Rectangle
                                                    Height="100"
                                                    Margin="0,0,0,10"
                                                    Fill="#DDD" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    FontSize="14"
                                                    FontWeight="Bold"
                                                    Text="{Binding NomVin}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    MaxHeight="30"
                                                    Margin="0,5,0,0"
                                                    FontSize="11"
                                                    Foreground="Gray"
                                                    Text="{Binding Description}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    FontWeight="Bold"
                                                    Foreground="#5C6AC4"
                                                    Text="{Binding PrixVin, StringFormat=' {0:C2}', ConverterCulture='fr-FR'}" />
                                                <Button
                                                    Width="25"
                                                    Height="25"
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Right"
                                                    Click="Button_Click"
                                                    Content="&#xE710;"
                                                    FontFamily="Segoe MDL2 Assets"
                                                    Tag="{Binding}"
                                                    ToolTip="Ajouter au panier" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem
                Height="22"
                Margin="-2,0,2,0"
                VerticalAlignment="Bottom"
                Header="Créer Demande">
                <StackPanel>
                    <Label
                        Width="730"
                        Margin="0,10,0,0"
                        Content="Créer une demande"
                        FontSize="18"
                        FontWeight="Bold" />
                    <DataGrid
                        Name="dgDemande"
                        Width="734"
                        Height="235"
                        Margin="0,30,0,0"
                        AutoGenerateColumns="False"
                        ItemsSource="{Binding VinsDemande}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#8B0000" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Padding" Value="8,5" />
                                <Setter Property="BorderBrush" Value="#660000" />
                                <Setter Property="BorderThickness" Value="0,0,1,0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="2*"
                                Binding="{Binding NomVin}"
                                Header="Vin" />
                            <DataGridTextColumn
                                x:Name="dttxtNumClient"
                                Width="*"
                                Binding="{Binding NumClient}"
                                Header="Numéro client" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Date}"
                                Header="Date" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Quantite}"
                                Header="Quantité" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button
                        x:Name="butAjouterClient"
                        Width="120"
                        Height="25"
                        Margin="600,25,0,0"
                        Click="butAjouterClient_Click"
                        Content="Ajouter le client" />
                    <Button
                        x:Name="butValiderCommande"
                        Width="120"
                        Height="25"
                        Margin="600,25,0,0"
                        Click="butValiderCommande_Click"
                        Content="Valider la demande" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Etat demande" Margin="-2,0,2,0">
                <Grid>
                    <StackPanel>
                        <Label
                            Width="730"
                            Margin="0,10,0,0"
                            Content="Etat Demande"
                            FontSize="18"
                            FontWeight="Bold" />
                        <DataGrid
                            x:Name="dgCommandes"
                            Height="269"
                            Margin="57,30,57,124"
                            AlternatingRowBackground="#FFF8F8"
                            AutoGenerateColumns="False"
                            Background="White"
                            BorderBrush="#8B0000"
                            BorderThickness="2"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            HorizontalGridLinesBrush="#E0E0E0"
                            IsReadOnly="True"
                            ItemsSource="{Binding LesDemandes}"
                            RowBackground="White">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="#8B0000" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Padding" Value="8,5" />
                                    <Setter Property="BorderBrush" Value="#660000" />
                                    <Setter Property="BorderThickness" Value="0,0,1,0" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="2*"
                                    Binding="{Binding NumVin.NomVin}"
                                    Header="Vin" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NumVin.NumFournisseur.NomFournisseur}"
                                    Header="Fournisseur" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding NumEmploye.Nom}"
                                    Header="Demandé par " />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding DateDemande}"
                                    Header="Date" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Accepter}"
                                    Header="Choix ">
                                    <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Accepter}" Value="En Attente">
                                                <Setter Property="Background" Value="Orange" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Padding" Value="5,2" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Accepter}" Value="Accepter">
                                                <Setter Property="Background" Value="Green" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Padding" Value="5,2" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Accepter}" Value="Refuser">
                                                <Setter Property="Background" Value="Red" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Padding" Value="5,2" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <Border
            Height="30"
            VerticalAlignment="Bottom"
            Background="#8B0000">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontStyle="Italic"
                Foreground="White"
                Text="Nicolas - L'art de bien choisir son vin" />
        </Border>
    </StackPanel>
</UserControl>