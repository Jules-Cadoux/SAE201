<Window
    x:Class="SAE201.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Recherche Vin"
    Width="900"
    Height="600"
    Background="#FAFAFA"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="TabItem">
                <StackPanel Background="#FFE5E5E5">
                    <TextBox
                        Grid.Row="1"
                        Height="40"
                        Margin="0,0,0,10"
                        Padding="10"
                        FontSize="14"
                        Text="Rechercher par nom, cépage, région..." />

                    <!--  Filtres  -->
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <ComboBox Width="120" Height="30" Text="Type de vin" >
                            <ComboBoxItem>Blanc</ComboBoxItem>
                            <ComboBoxItem>Rose</ComboBoxItem>
                            <ComboBoxItem>Rouge</ComboBoxItem>
                        </ComboBox>
                        <ComboBox Width="120" Height="30" Text="Appellation" >
                            <ComboBoxItem>AOC</ComboBoxItem>
                            <ComboBoxItem>AOP</ComboBoxItem>
                            <ComboBoxItem>IGP</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Margin="5,0,5,0" VerticalAlignment="Center" Text="Année de production" />
                        <TextBox Width="80" Height="30" Text="" VerticalContentAlignment="Center" />
                        <TextBlock Margin="5,0,5,0" VerticalAlignment="Center" Text="Prix max (€)" />
                        <TextBox Width="80" Height="30" Text="" VerticalContentAlignment="Center" />
                    </StackPanel>

                    <!--  Résultats  -->
                    <StackPanel Grid.Row="3">
                        <TextBlock Margin="0,0,0,10" FontSize="16" FontWeight="Bold" Text="{Binding Vins.Count, StringFormat='Résultats ({0})'}" />
                        <ListBox ItemsSource="{Binding Vins}" HorizontalAlignment="Stretch" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!-- Contenu de chaque vin dans un bloc distinct -->
                                    <Border Padding="10" Background="White" CornerRadius="5" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1" Height="200" Width="250">
                                        <StackPanel>
                                            <Rectangle Height="100" Fill="#DDD" Margin="0,0,0,10"/>
                                            <TextBlock Margin="0,10,0,0" FontWeight="Bold" Text="{Binding NomVin}" TextWrapping="Wrap" />
                                            <TextBlock Foreground="Gray" Text="{Binding Description}" TextWrapping="Wrap" />
                                            <TextBlock FontWeight="Bold" Foreground="#5C6AC4" Text="{Binding PrixVin, StringFormat='{}{0:C}'}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>