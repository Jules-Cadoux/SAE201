<Window
    x:Class="SAE201.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Recherche Vin"
    Width="900"
    Height="600"
    Background="#FAFAFA"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="TabItem">
                <StackPanel Background="#FFE5E5E5">
                    <TextBox
                        Grid.Row="1"
                        Height="35"
                        Margin="0,0,0,10"
                        Padding="10"
                        FontSize="14"
                        Text="Rechercher par nom, cépage, région..." />

                    <!--  Filtres  -->
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <ComboBox
                            Width="120"
                            Height="30"
                            Text="Type de vin" />
                        <ComboBox
                            Width="120"
                            Height="30"
                            Text="Appellation" />
                        <ComboBox
                            Width="120"
                            Height="30"
                            Text="Année" />
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="Prix max (€)" />
                            <TextBox
                                Width="80"
                                Height="30"
                                Text="50" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Résultats  -->
                    <StackPanel Grid.Row="3">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Résultats (3)" />

                        <UniformGrid
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Columns="3">
                            <!--  Carte Vin 1  -->
                            <Border
                                Padding="10"
                                Background="White"
                                CornerRadius="5">
                                <StackPanel>
                                    <Rectangle Height="100" Fill="#DDD" />
                                    <TextBlock
                                        Margin="0,10,0,0"
                                        FontWeight="Bold"
                                        Text="Château Margaux 2015" />
                                    <TextBlock Foreground="Gray" Text="Bordeaux - Rouge" />
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="#5C6AC4"
                                        Text="89,90 €" />
                                </StackPanel>
                            </Border>

                            <!--  Carte Vin 2  -->
                            <Border
                                Padding="10"
                                Background="White"
                                CornerRadius="5">
                                <StackPanel>
                                    <Rectangle Height="100" Fill="#DDD" />
                                    <TextBlock
                                        Margin="0,10,0,0"
                                        FontWeight="Bold"
                                        Text="Domaine de la Romanée–Conti 2018" />
                                    <TextBlock Foreground="Gray" Text="Bourgogne - Rouge" />
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="#5C6AC4"
                                        Text="1 250,00 €" />
                                </StackPanel>
                            </Border>

                            <!--  Carte Vin 3  -->
                            <Border
                                Padding="10"
                                Background="White"
                                CornerRadius="5">
                                <StackPanel>
                                    <Rectangle Height="100" Fill="#DDD" />
                                    <TextBlock
                                        Margin="0,10,0,0"
                                        FontWeight="Bold"
                                        Text="Sancerre Blanc 2021" />
                                    <TextBlock Foreground="Gray" Text="Loire - Blanc" />
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="#5C6AC4"
                                        Text="24,90 €" />
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>