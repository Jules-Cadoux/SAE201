<Window x:Class="WineApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recherche Vin" Height="600" Width="900"
        Background="#FAFAFA" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="TabItem">
                <StackPanel Background="#FFE5E5E5">
                    <TextBox Grid.Row="1" Height="35" Margin="0,0,0,10" Text="Rechercher par nom, cépage, région..." FontSize="14" Padding="10" />

                    <!-- Filtres -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                        <ComboBox Width="120" Height="30" Text="Type de vin"/>
                        <ComboBox Width="120" Height="30" Text="Appellation"/>
                        <ComboBox Width="120" Height="30" Text="Année"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Prix max (€)" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <TextBox Width="80" Height="30" Text="50" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Résultats -->
                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Résultats (3)" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <UniformGrid Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,10">
                            <!-- Carte Vin 1 -->
                            <Border Background="White" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <Rectangle Height="100" Fill="#DDD"/>
                                    <TextBlock Text="Château Margaux 2015" FontWeight="Bold" Margin="0,10,0,0"/>
                                    <TextBlock Text="Bordeaux - Rouge" Foreground="Gray"/>
                                    <TextBlock Text="89,90 €" Foreground="#5C6AC4" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- Carte Vin 2 -->
                            <Border Background="White" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <Rectangle Height="100" Fill="#DDD"/>
                                    <TextBlock Text="Domaine de la Romanée–Conti 2018" FontWeight="Bold" Margin="0,10,0,0"/>
                                    <TextBlock Text="Bourgogne - Rouge" Foreground="Gray"/>
                                    <TextBlock Text="1 250,00 €" Foreground="#5C6AC4" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- Carte Vin 3 -->
                            <Border Background="White" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <Rectangle Height="100" Fill="#DDD"/>
                                    <TextBlock Text="Sancerre Blanc 2021" FontWeight="Bold" Margin="0,10,0,0"/>
                                    <TextBlock Text="Loire - Blanc" Foreground="Gray"/>
                                    <TextBlock Text="24,90 €" Foreground="#5C6AC4" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>